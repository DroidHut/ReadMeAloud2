<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff8e1"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context="com.example.shivani.bookreader.MainActivity">
 
<include
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    layout="@layout/toolbar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">
    <LinearLayout
        android:id="@+id/bookOne"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_margin="10dp"
        android:clickable="true"
        android:layout_weight="1"
        android:background="@drawable/background"
        android:elevation="6dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_book"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="0dp"/>

        <TextView
            android:id="@+id/title_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="5dp"
            android:textColor="#424242"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/author_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#424242"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/bookTwo"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:clickable="true"
        android:background="@drawable/background"
        android:elevation="6dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_book2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="0dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/title_book2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="#424242"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/author_book2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#424242"
            android:textSize="16sp" />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
